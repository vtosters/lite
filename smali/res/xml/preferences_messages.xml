<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/vtlinterfacemsg">
        <Preference
            android:key="wallpapers"
            android:title="Обои в сообщениях" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="voice"
            android:summary="@string/vtlvoicesummary"
            android:title="@string/vtlvoice" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="convBarRecomm"
            android:summary="Скрыть блок рекомендаций добавления в друзья в сообщениях и других советов"
            android:title="Скрыть рекомендации" />
    </PreferenceCategory>
    <PreferenceCategory android:title="VK Мессенджер">
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="vkme"
            android:summary="@string/vkmesumm"
            android:title="@string/vkme" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="vkme_notifs"
            android:title="@string/vkme_notifs" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Переводчик">
        <com.vtosters.lite.ui.SummaryListPreference
            android:defaultValue="system"
            android:dialogTitle="Выберите язык"
            android:entries="@array/targetlang_value"
            android:entryValues="@array/targetlang"
            android:key="lang_target"
            android:title="Язык переводчика" />
        <Preference
            android:key="lang_service"
            android:title="Сервис переводов" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="autotranslate"
            android:summary="Автоматически переводить ваши исходящие сообщения"
            android:title="Автоматический перевод" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="autoalltranslate"
            android:summary="Автоматически переводить все сообщения\n\nМогут быть проблемы с загрузкой сообщений"
            android:title="Автоматический перевод всего" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/interfaceemoji">
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="alteremoji"
            android:summary="@string/alteremojisum"
            android:title="@string/alteremoji" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="systememoji"
            android:summary="@string/systememojisum"
            android:title="@string/systememoji" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/vtlother">
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="sendByEnter"
            android:summary="@string/sett_send_by_enter_summary"
            android:title="@string/sett_send_by_enter" />
        <com.vtosters.lite.ui.SummaryListPreference
            android:defaultValue="30"
            android:dialogTitle="@string/messages_other_choose_count"
            android:entries="@array/msgcount_value"
            android:entryValues="@array/msgcount"
            android:key="msgcount"
            android:title="@string/messages_other_download_first" />
    </PreferenceCategory>
</PreferenceScreen>