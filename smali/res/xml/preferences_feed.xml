<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/vtad">
        <com.vtosters.lite.ui.MaterialSwitchPreference
                android:defaultValue="true"
                android:key="__dbg_no_ads"
                android:summary="@string/feed_ads_regular_summary"
                android:title="@string/vtldads"/>
        <com.vtosters.lite.ui.MaterialSwitchPreference
                android:defaultValue="true"
                android:key="adsgroup"
                android:summary="@string/vtldgadssummary"
                android:title="@string/vtldgads"/>
        <Preference
                android:key="whitelisted_ad_groups"
                android:title="@string/whitelisted_ad_groups_title"/>
        <Preference
                android:key="sponsorpost"
                android:summary="Sponsor Post - современный и эффективный способ блокировки рекламы от команды ВТостерс"
                android:title="Настройки Sponsor Post"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/stories">
        <com.vtosters.lite.ui.MaterialSwitchPreference
                android:defaultValue="true"
                android:key="adsstories"
                android:summary="@string/feed_ads_stories_summary"
                android:title="@string/vtldas"/>
        <com.vtosters.lite.ui.MaterialSwitchPreference
                android:defaultValue="false"
                android:key="storiesGroupsAdBlock"
                android:title="@string/storiesGroupsAdBlock"
                android:summary="@string/storiesGroupsAdBlocksummary"/>
        <Preference
                android:key="whitelisted_stories_ad"
                android:title="@string/whitelisted_ad_groups_stories_title"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/vtlrecommend">
        <com.vtosters.lite.ui.MaterialSwitchPreference
                android:defaultValue="false"
                android:key="friendsrecomm"
                android:summary="@string/feed_recommendations_friends_summary"
                android:title="@string/vtlrecommendfriend"/>
        <com.vtosters.lite.ui.MaterialSwitchPreference
                android:defaultValue="false"
                android:key="authorsrecomm"
                android:summary="@string/feed_recommendations_authors_summary"
                android:title="@string/vtlrecommendauthor"/>
        <com.vtosters.lite.ui.MaterialSwitchPreference
                android:defaultValue="false"
                android:key="postsrecomm"
                android:summary="@string/feed_recommendations_friends_reacted_summary"
                android:title="@string/vtlrecommendfriendpost"/>
        <com.vtosters.lite.ui.MaterialSwitchPreference
                android:defaultValue="false"
                android:key="captions"
                android:summary="@string/vtlrecommendmarksummary"
                android:title="@string/vtlrecommendmark"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/vtlfilters">
        <Preference
                android:enabled="false"
                android:summary="@string/vtlhtmfsummary"
                android:title="@string/vtlhtmf"/>
        <EditTextPreference
                android:defaultValue=""
                android:key="spamfilters"
                android:title="@string/vtlownfilter"/>
        <Preference
                android:key="whitelisted_filters_groups"
                android:title="@string/whitelisted_filters_groups_title"/>
        <com.vtosters.lite.ui.MaterialSwitchPreference
                android:defaultValue="false"
                android:key="invertFilters"
                android:summary="@string/invertFilters_summ"
                android:title="@string/invertFilters"/>
        <com.vtosters.lite.ui.MaterialSwitchPreference
                android:defaultValue="false"
                android:key="blockminiapps"
                android:summary="@string/blockminiapps_summ"
                android:title="@string/blockminiapps_title"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/sources">
        <EditTextPreference
                android:defaultValue=""
                android:key="sourcenamefilter"
                android:title="@string/vtlsourcenamefilter"/>
        <EditTextPreference
                android:defaultValue=""
                android:key="linkfilter"
                android:title="@string/vtllinkfilter"/>
        <com.vtosters.lite.ui.MaterialSwitchPreference
                android:defaultValue="false"
                android:key="cringerepost"
                android:summary="@string/cringerepost_summ"
                android:title="@string/cringerepost_title"/>
        <com.vtosters.lite.ui.MaterialSwitchPreference
                android:defaultValue="false"
                android:key="copyright_post"
                android:summary="@string/feed_ads_sources_summary"
                android:title="@string/feed_ads_sources"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/vtlfeedwork">
        <com.vtosters.lite.ui.SummaryListPreference
                android:defaultValue="order"
                android:dialogTitle="@string/newsfeed_settings_order"
                android:entries="@array/newsfeed_settings_feed_type"
                android:entryValues="@array/newsfeed_settings_feed_type_v"
                android:key="newsfeed_order"
                android:textColor="?text_secondary"
                android:title="@string/newsfeed_settings_order"/>
        <Preference
                android:enabled="false"
                android:summary="@string/why_news_not_updated_summ"
                android:title="@string/why_news_not_updated_title"/>
        <com.vtosters.lite.ui.SummaryListPreference
                android:defaultValue="default"
                android:dialogTitle="@string/feed_other_update_dialog_title"
                android:entries="@array/newsupdate_value"
                android:entryValues="@array/newsupdate"
                android:key="newsupdate"
                android:title="@string/feed_other_update"/>
        <com.vtosters.lite.ui.MaterialSwitchPreference
                android:defaultValue="false"
                android:key="unlockCustomLists"
                android:summary="Разблокировать новостные списки как футбол или региональные новости в списке новостей"
                android:title="Новостные списки"/>
        <Preference
                android:key="newsfeedlistmanager"
                android:summary="@string/newsfeedlistmanager_summ"
                android:title="@string/newsfeedlistmanager_title"/>
        <Preference
                android:key="newsfeedlistmanager_reset"
                android:title="@string/newsfeedlistmanager_reset_title"/>
        <com.vtosters.lite.ui.MaterialSwitchPreference
                android:defaultValue="true"
                android:key="feedcache"
                android:summary="@string/feed_other_cache_summary"
                android:title="@string/vtlfeedcache"/>
    </PreferenceCategory>
</PreferenceScreen>