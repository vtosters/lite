<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Акценты">
        <Preference
            android:key="accent_color"
            android:summary="Цвет акцента в приложении"
            android:title="Цвет акцента" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/vtlthemes">
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="milkshake"
            android:summary="@string/milkshake_summ"
            android:title="@string/milkshake_title" />
        <Preference
            android:enabled="false"
            android:summary="@string/appearance_theme_info_summary"
            android:title="@string/appearance_theme_info" />
        <com.vtosters.lite.ui.SummaryListPreference
            android:defaultValue="default"
            android:dialogTitle="@string/appearance_theme_dialog_title"
            android:entries="@array/darktheme_value"
            android:entryValues="@array/darktheme"
            android:key="darktheme"
            android:title="@string/appearance_theme_dark_theme" />
        <com.vtosters.lite.ui.SummaryListPreference
            android:defaultValue="default"
            android:dialogTitle="@string/appearance_theme_dialog_title"
            android:entries="@array/lighttheme_value"
            android:entryValues="@array/lighttheme"
            android:key="lighttheme"
            android:title="@string/appearance_theme_light_theme" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="dockbarsett"
        android:title="@string/vtl_settings_dockbar_title">
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="dockbar_tab_titles"
            android:title="@string/dockbar_tab_titles" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="dockbar_accent"
            android:title="@string/dockbar_accent_title" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="dockcounter"
            android:summary="@string/docknumberssum"
            android:title="@string/docknumbers" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="newsfeed_notif"
            android:summary="@string/newsfeed_notif_summ"
            android:title="@string/newsfeed_notif_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/vtlother">
        <Preference
            android:key="iconmanager"
            android:summary="@string/iconmanager_summ"
            android:title="@string/iconmanager_title" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="navbar"
            android:summary="@string/appearance_other_color_navbar_summary"
            android:title="@string/vtlnavbar" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="VKUI_INJ"
            android:summary="@string/appearance_other_color_webview_summary"
            android:title="@string/vkuiinj" />
    </PreferenceCategory>
</PreferenceScreen>