<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <inset android:insetLeft="@dimen/touch_zone_ext" android:insetRight="@dimen/touch_zone_ext" android:insetTop="@dimen/touch_zone_ext" android:insetBottom="@dimen/touch_zone_ext">
            <shape>
                <solid android:color="#ff466f9e" />
                <corners android:radius="2.0dip" />
            </shape>
        </inset>
    </item>
    <item android:state_pressed="false">
        <inset android:insetLeft="@dimen/touch_zone_ext" android:insetRight="@dimen/touch_zone_ext" android:insetTop="@dimen/touch_zone_ext" android:insetBottom="@dimen/touch_zone_ext">
            <shape>
                <solid android:color="?accent" />
                <corners android:radius="2.0dip" />
            </shape>
        </inset>
    </item>
</selector>