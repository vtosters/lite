<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?background_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16.0dip">

        <EditText
            android:id="@id/domain_input"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:background="@drawable/domain_text_field"
            android:hint="@string/page_address"
            android:inputType="textFilter"
            android:maxLength="32"
            android:singleLine="true"
            android:textColor="?text_primary"
            android:textColorHint="?text_secondary"
            android:textSize="16.0dip" />

        <TextView
            android:id="@id/domain_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7.0dip"
            android:text="Status"
            android:textColor="?text_primary"
            android:textSize="12.0dip" />

        <TextView
            android:id="@id/domain_explain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24.0dip"
            android:text="@string/domain_explain"
            android:textColor="?text_secondary"
            android:textSize="14.0dip" />

        <TextView
            android:id="@id/domain_current_link"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="https://vk.com/durov"
            android:textColor="?accent"
            android:textSize="14.0dip" />
    </LinearLayout>
</ScrollView>