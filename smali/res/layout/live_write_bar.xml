<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@id/liveWritebarActionCreate"
        android:layout_width="48.0dip"
        android:layout_height="64.0dip"
        android:layout_gravity="center_vertical"
        android:background="@drawable/stories_button_bg"
        android:contentDescription="@string/story_accessibility_add_attachments"
        android:scaleType="center"
        android:src="@drawable/ic_linked_24"
        android:visibility="gone" />

    <ImageView
        android:id="@id/liveWritebarActionGo"
        android:layout_width="48.0dip"
        android:layout_height="64.0dip"
        android:layout_gravity="center_vertical"
        android:background="@drawable/stories_ad_button_bg"
        android:scaleType="center"
        android:src="@drawable/ic_linked_24"
        android:visibility="visible"
        app:tint="@color/gray_800" />

    <ImageView
        android:id="@id/liveWritebarGifts"
        android:layout_width="48.0dip"
        android:layout_height="64.0dip"
        android:layout_gravity="center_vertical"
        android:background="@drawable/stories_button_bg"
        android:contentDescription="@string/live_accessibility_send_gift"
        android:scaleType="center"
        android:src="@drawable/ic_gift_24"
        android:visibility="gone" />

    <FrameLayout
        android:id="@id/liveWritebaMiddleHolder"
        android:layout_width="0.0dip"
        android:layout_height="64.0dip"
        android:layout_weight="1.0">

        <FrameLayout
            android:id="@id/liveWritebarActionHolder"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8.0dip" />

        <TextView
            android:id="@id/liveWritebarActionGoBig"
            android:layout_width="wrap_content"
            android:layout_height="64.0dip"
            android:background="@drawable/stories_ad_button_bg"
            android:fontFamily="@string/font_family_medium"
            android:gravity="center|left"
            android:paddingLeft="20.0dip"
            android:paddingRight="20.0dip"
            android:text="Смореть пост"
            android:textColor="@color/gray_800"
            android:textSize="15.0dip"
            android:visibility="gone" />

        <FrameLayout
            android:id="@id/liveWritebarHolder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.vk.libvideo.live.views.write.EditTextAnchor
                android:id="@id/liveWritebarEdit"
                android:layout_width="fill_parent"
                android:layout_height="64.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="1.0dip"
                android:background="@drawable/stories_button_bg"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/msg_hint"
                android:imeOptions="actionSend|flagNoExtractUi"
                android:inputType="text"
                android:maxHeight="110.0dip"
                android:maxLength="600"
                android:minHeight="48.0dip"
                android:nestedScrollingEnabled="false"
                android:paddingLeft="20.0dip"
                android:paddingTop="8.0dip"
                android:paddingRight="54.0dip"
                android:paddingBottom="8.0dip"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@null"
                android:textSize="15.0sp" />

            <FrameLayout
                android:id="@id/liveWritebarEmojiHodler"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:layout_gravity="center|right"
                android:layout_marginRight="8.0dip">

                <com.vk.libvideo.live.views.write.ImageViewAnchor
                    android:id="@id/liveWritebarEmoji"
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:background="@null"
                    android:contentDescription="@string/accessibility_emoji"
                    android:scaleType="center"
                    android:src="@drawable/ic_smile_outline_28" />

                <ImageView
                    android:id="@id/liveWritebarEmojiNew"
                    android:layout_width="10.0dip"
                    android:layout_height="10.0dip"
                    android:layout_gravity="center|right|top"
                    android:layout_marginTop="7.5dip"
                    android:layout_marginRight="7.5dip"
                    android:background="@drawable/ic_sticker_new_badge_composite_full"
                    android:contentDescription="@null" />
            </FrameLayout>

            <ImageView
                android:id="@id/liveWritebarSuper"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:layout_gravity="center|right"
                android:layout_marginRight="48.0dip"
                android:background="@drawable/highlight_icon"
                android:contentDescription="@string/story_accessibility_supermsg_on"
                android:scaleType="center"
                android:src="@drawable/ic_flash_circle_outline_28" />
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@id/writeViewButtonsHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:gravity="right">

        <ImageView
            android:id="@id/liveWritebarToggle"
            android:layout_width="48.0dip"
            android:layout_height="64.0dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/stories_button_bg"
            android:contentDescription="@string/story_accessibility_change_camera"
            android:scaleType="center"
            android:src="@drawable/ic_camera_switch_outline_24" />

        <ImageView
            android:id="@id/liveWritebarMasks"
            android:layout_width="48.0dip"
            android:layout_height="64.0dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/stories_button_bg"
            android:contentDescription="@string/story_accessibility_masks"
            android:scaleType="center"
            android:src="@drawable/ic_mask_outline_24" />

        <ImageView
            android:id="@id/liveWritebarSendMessageIcon"
            android:layout_width="48.0dip"
            android:layout_height="64.0dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/stories_button_bg"
            android:scaleType="center"
            android:src="@drawable/ic_message_24" />

        <ImageView
            android:id="@id/liveWritebarSendLike"
            android:layout_width="48.0dip"
            android:layout_height="64.0dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/lives_like_button_background"
            android:scaleType="center"
            android:src="@drawable/ic_like_24" />

        <ImageView
            android:id="@id/liveWritebarSend"
            android:layout_width="48.0dip"
            android:layout_height="64.0dip"
            android:layout_gravity="center"
            android:background="@drawable/lives_send_button_bg"
            android:contentDescription="@string/story_accessibility_send_message"
            android:scaleType="center"
            android:src="@drawable/ic_send_24" />
    </LinearLayout>
</merge>