<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingLeft="@dimen/game_padding_lr0"
    android:paddingRight="@dimen/game_padding_lr0"
    android:paddingBottom="24.0dip">

    <LinearLayout
        android:id="@id/friends_block"
        android:layout_width="fill_parent"
        android:layout_height="56.0dip"
        android:background="@drawable/highlight"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:weightSum="1.0">

        <TextView
            android:id="@id/text_playing_friends"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:fontFamily="@string/font_family_regular"
            android:singleLine="true"
            android:text="@string/eight_friends"
            android:textColor="@color/subhead_gray"
            android:textSize="15.0sp" />

        <com.vk.imageloader.view.VKCircleImageView
            android:id="@id/image3"
            android:layout_width="28.0dip"
            android:layout_height="28.0dip"
            android:paddingRight="4.0dip"
            app:placeholderImage="@drawable/user_placeholder" />

        <com.vk.imageloader.view.VKCircleImageView
            android:id="@id/image2"
            android:layout_width="28.0dip"
            android:layout_height="28.0dip"
            android:paddingRight="4.0dip"
            app:placeholderImage="@drawable/user_placeholder" />

        <com.vk.imageloader.view.VKCircleImageView
            android:id="@id/image1"
            android:layout_width="28.0dip"
            android:layout_height="28.0dip"
            android:paddingRight="4.0dip"
            app:placeholderImage="@drawable/user_placeholder" />

        <com.vk.imageloader.view.VKCircleImageView
            android:id="@id/image0"
            android:layout_width="28.0dip"
            android:layout_height="28.0dip"
            android:paddingRight="4.0dip"
            app:placeholderImage="@drawable/user_placeholder" />
    </LinearLayout>

    <View
        android:id="@id/divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@drawable/apps_info_playing_friends" />

    <TextView
        android:id="@id/description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_family_regular"
        android:lineSpacingExtra="7.0sp"
        android:paddingLeft="16.0dip"
        android:paddingTop="12.0dip"
        android:paddingRight="16.0dip"
        android:paddingBottom="2.0dip"
        android:textColor="#ff212121"
        android:textSize="15.0sp" />

    <TextView
        android:id="@id/text_expand"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_family_regular"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:text="@string/post_show_full"
        android:textColor="@color/text_blue"
        android:textSize="15.0sp" />

    <com.vtosters.lite.ui.widget.GameScreenshotsRecyclerView
        android:id="@id/recycle"
        android:layout_width="fill_parent"
        android:layout_height="256.0dip"
        android:layout_marginTop="12.0dip" />
</LinearLayout>